<div class="container">
	<div class="row">
		<div class="jumbotron" id="header-background">
			<div id="heading">
				<h1>Eat the Burger!</h1>
			</div>
		</div>
	</div>

	<div class="row" id="burgers">

		<div class="burgers" id="hungry">
			<div class="panel panel-default" id="burger-panel">
				<div class="panel-heading" id="burger-heading">
				<h2>Available Burgers</h2>
				</div>
				<div class="panel-body">
				</div>
					<table class="table">
					  <ol>
					  {{#each burgers}}
					    {{#unless this.devoured}}
					      	<li>
					        {{this.burger_name}}

					        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
					          <input type="hidden" name="devoured" value="true">
					          <button class="btn btn-primary" id="devour-btn" type="submit">DEVOUR!</button>
					        </form>
					      </li>
					    {{/unless}}
					  {{/each}}
					  
					</table>
				
			</div>
		</div>

		<div class="burgers" id="full">
			<div class="panel panel-default" id="burger-panel">
				<div class="panel-heading" id="burger-heading">
					<h2>Burgers Consumed</h2>
				</div>
				<div class="panel-body">
					<ul>
					  {{#each burgers}}
					    {{#if this.devoured}}
					      <li>
					        {{this.burger_name}}

					        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
					          <input type="hidden" name="devoured" value="false">
					        </form>
					      </li>
					    {{/if}}
					  {{/each}}
					</ul>
				</div>
			</div>
		</div>

	</div>

	<div class="row" id="add">
		<h2>Add a Burger</h2>
		<form class="create-update-form" action="/burgers/add" method="POST">

		  <div class="form-group">
		    <label for="new">Burger Name:</label>
		    <input type="text" id="new" name="name">
		  </div>

		  <button class="btn btn-primary" type="submit">Add Burger</button>
		</form>
	</div>
</div>